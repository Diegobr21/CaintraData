@page "/selectimport"
@inject NavigationManager navmanager
<h1>Selecciona Tipo de Datos </h1>

<hr />
<h3> Archivo Usuarios </h3>
<p> Ingresa un archivo .csv con el encabezado: </p>
<table class="table-bordered">
    <thead>
        <tr>
            <th>Nombre Usuario </th>
            <th>Municipio/Estado </th>
            <th>Telefono </th>
            <th>Correo </th>
            <th>Empresa </th>
            <th>Activo </th>
        </tr>
    </thead>
</table>
<br />
<RadzenButton @ref="btn1" Click=@(args => OnClick("usuarios")) Text="Usuarios" Icon="account_circle" Style="margin-bottom: 80px; width: 200px" />
<hr />
<h3> Archivo Empresas </h3>
<p> Ingresa un archivo .csv con el encabezado: </p>
<table class="table-bordered">
    <thead>
        <tr>
            <th>Nombre Comercial</th>
            <th>Razon Social</th>
            <th>Direccion</th>
            <th>Municipio/Estado</th>
            <th>Sitio Web</th>
            <th>Num Socio</th>
            <th>Size</th>
            <th>Vigente</th>
        </tr>
    </thead>
</table>
<br />
<RadzenButton @ref="btn2" Click=@(args => OnClick("empresas")) Text="Empresas" Icon="card_travel" Style="margin-bottom: 80px; width: 200px" />


@code {


    RadzenButton btn1;
    RadzenButton btn2;
    

    protected void OnClick(string type)
    {
        if (type.Equals("usuarios"))
        {
            navmanager.NavigateTo("/importdatausu");
        }
        else if (type.Equals("empresas"))
        {
            navmanager.NavigateTo("/importdataempresas");
        }

    }

    

}